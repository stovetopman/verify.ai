{
    "name": "Verif.ai",
    "description": "Misinformation detector extension",
    "version": "0.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [{
      "resources": ["dist/Readability.js"],
      "matches": ["<all_urls>"]
    }],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/popup.js"],
        "run_at": "document_idle"
      }
    ]
  }
