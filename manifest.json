{
    "name": "Verif.ai",
    "description": "Misinformation detector extension",
    "version": "0.0",
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "dist/Readability.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      },
      {
        "resources": ["config.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "src/popup.js"
        ],
        "run_at": "document_idle"
      }
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }